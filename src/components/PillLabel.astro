---
const { title, textColor, backgroundColor } = Astro.props;
---

<div
  style={{
    color: textColor,
    background: backgroundColor,
  }}
>
  {title}
</div>

<style>
  div {
    display: inline-flex;
    height: fit-content;
    width: fit-content;
    padding: 0.25rem 1.3125rem;
    align-items: flex-start;
    gap: 0.625rem;
    border-radius: var(--heading-small-radius);
    background: var(--primary01);
    color: #181818;

    font-family: cabin;
    font-size: var(--paragraph-text);
    font-style: normal;
    font-weight: var(--normal);
    line-height: var(--default-line-height);
    letter-spacing: 0.145rem;
  }
</style>
