---
const { title } = Astro.props;
---

<div>
  {title}
</div>

<style>
  div {
    display: inline-flex;
    height: fit-content;
    width: fit-content;
    padding: 0.25rem 1.3125rem;
    align-items: flex-start;
    gap: 0.625rem;
    border-radius: var(--heading-small-radius);
    background-color: var(--primary03);
    color: var(--secondary02);
    cursor: pointer;

    font-family: cabin;
    font-size: var(--paragraph-text);
    font-style: normal;
    font-weight: var(--normal);
    line-height: var(--default-line-height);
    letter-spacing: 0.145rem;
  }
  div:hover {
    background: var(--primary01);
    color: var(--primary03);
  }
</style>
