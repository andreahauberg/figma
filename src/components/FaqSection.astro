---
import PillHeading from "./PillHeading.astro";

import Faq from "../components/Faq.astro";
---

<section>
  <div class="faq-container">
    <PillHeading textColor="#FFFFFF" backgroundColor="#4EAF4E" title="faq" />
    <p class="medium-size">Customer Questions</p>
    <div class="faq-inner">
      <Faq
        title="What will happen when I’ve sent my application?"
        data="faq-toggle-1"
        id="faq-toggle-1"
        body="Ippsum is the result of synergy between our teams"
      />
      <Faq
        title="Can I get a free trial before I purchase?"
        data="faq-toggle-2"
        id="faq-toggle-2"
        body="Lorem, ipsum dolor sit amet consectetur adipisicing elit."
      />
      <Faq
        title="What should I include in my personal statement?"
        data="faq-toggle-3"
        id="faq-toggle-3"
        body="Lorem, ipsum dolor sit amet consectetur adipisicing elit."
      />
      <Faq
        title="Will membership plans be charged automatically?"
        data="faq-toggle-4"
        id="faq-toggle-4"
        body="Lorem, ipsum dolor sit amet consectetur adipisicing elit."
      />
      <Faq
        title="What will happen when I’ve sent my application?"
        data="faq-toggle-5"
        id="faq-toggle-5"
        body="Lorem, ipsum dolor sit amet consectetur adipisicing elit."
      />
      <Faq
        title="Can I get a free trial before I purchase?"
        data="faq-toggle-6"
        id="faq-toggle-6"
        body="Lorem, ipsum dolor sit amet consectetur adipisicing elit."
      />
    </div>
  </div>
</section>

<style>
  section {
    grid-column: feature;
    background: var(--secondary02);
    margin-bottom: 10rem;

    .faq-container {
      padding: 6rem 1rem;
      background-color: var(--secondary01);
      border-radius: 1.875rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .faq-inner {
      padding-top: 2rem;
    }

    .medium-size {
      padding-top: 1rem;
      max-width: 60ch;
    }
  }
</style>
