---
import PillLabel from "../components/PillLabel.astro";
import Card from "../components/Card.astro";
---

<div class="container">
  <section class="full">
    <ul role="list">
      <li>
        <div class="card-heading">
          <Card
            title="Sarah Jasmine"
            imgPath="../images/teamone.jpg"
            body="Leverage agile frameworks to provide a robust synopsis for high level."
          />
          <div class="button">
            <PillLabel title="CEO at Company" />
          </div>
        </div>
      </li>
      <li>
        <div class="card-heading">
          <Card
            title="John Carter"
            imgPath="../images/teamtwo.jpg"
            body="Leverage agile frameworks to provide a robust synopsis for high level."
          />
          <div class="button">
            <PillLabel title="Manager" />
          </div>
        </div>
      </li>
      <li>
        <div class="card-heading">
          <Card
            title="Daisy Stella"
            imgPath="../images/teamthree.jpg"
            body="Leverage agile frameworks to provide a robust synopsis for high level."
          />
          <div class="button">
            <PillLabel title="CEO at Company" />
          </div>
        </div>
      </li>
    </ul>
  </section>
</div>

<style>
  .container {
    grid-column: feature;
    text-align: center;
    display: grid;
    grid:
      auto /
      [full-start]
      1fr
      [content]
      minmax(0, var(--content-width))
      1fr
      [full-end];
    column-gap: 1rem;

    > * {
      grid-column: 2;
    }

    .full {
      grid-column: 1 / -1;
      display: grid;
      grid: auto / subgrid;
      row-gap: 3rem;

      > * {
        grid-column: 2;
      }

      > ul {
        scroll-snap-type: x mandatory;
        grid-column: 1 / -1;
        padding-block-end: 1rem;

        li {
          scroll-snap-align: center;
        }
      }
    }
    .card-heading {
      display: flex;
      flex-direction: column;
      gap: rem;
      position: relative;
    }

    .button {
      position: absolute;
      bottom: 10rem;
      right: 0;
    }

    img {
      border-radius: 1.75rem;
    }
  }

  ul {
    display: flex;
    gap: 3rem;
    overflow-x: auto;

    li {
      flex-basis: min(280px, 90%);
      flex-shrink: 0;
      background: var(--secondary02);
      border-radius: 8px;
      align-self: start;
    }
  }
</style>
