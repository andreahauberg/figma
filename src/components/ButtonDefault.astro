---
const { title } = Astro.props;
---

<div>
  <button class="small-size">{title}</button>
</div>
<style>
  div {
    display: flex;
    align-items: center;
  }
  button {
    max-width: 10;
    padding: 1rem 2rem;
    gap: 0.625rem;
    flex-shrink: 0;

    border-radius: 2.625rem;
    background: var(--primary03);
    border: 2px solid var(--primary03);

    color: var(--secondary02);
  }

  button:hover {
    background: var(--secondary02);
    color: var(--primary03);
    border: 2px solid var(--primary03);
  }
</style>
